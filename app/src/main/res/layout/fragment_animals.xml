<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorForBackground"
    tools:context=".AnimalsFragment">

    <ListView
        android:id="@+id/animalsNamesList"
        android:layout_width="match_parent"
        android:layout_height="295dp"
        android:layout_gravity="center"
        android:layout_marginBottom="80dp"
        android:background="@color/white" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="480dp"
        android:background="@color/colorForBackground"
        android:columnCount="3"
        android:rowCount="2">
        >

        <ImageView
            android:id="@+id/imageButton8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@android:color/transparent"
            android:scaleType="center"
            android:src="@drawable/gato" />

        <ImageView
            android:id="@+id/imageButton9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@android:color/transparent"
            android:scaleType="center"
            android:src="@drawable/cao" />

        <ImageView
            android:id="@+id/imageButton10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@android:color/transparent"
            android:scaleType="center"
            android:src="@drawable/leao" />

        <ImageView
            android:id="@+id/imageButton11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@android:color/transparent"
            android:src="@drawable/macaco" />

        <ImageView
            android:id="@+id/imageButton12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@android:color/transparent"
            android:src="@drawable/vaca" />

        <ImageView
            android:id="@+id/imageButton13"
            android:layout_width="wrap_content"
            android:layout_height="131dp"
            android:layout_row="1"
            android:layout_column="2"
            android:background="@android:color/transparent"
            android:scaleType="center"
            android:src="@drawable/ovelha" />

    </GridLayout>

    <TextView
        android:id="@+id/animalsTextId"
        android:layout_width="323dp"
        android:layout_height="87dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="40dp"
        android:text="@string/AnimalsText"
        android:textSize="35sp" />

</FrameLayout>